<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:pomodoro_forms"
             x:Class="pomodoro_forms.Activities"
             BackgroundColor="#F6F8FF">

    <ContentPage.Resources>
        <ResourceDictionary>
            
            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="HeightRequest" Value="35"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="15" RowSpacing="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
         
            <RowDefinition Height="*" />
           
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" ColumnSpacing="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Activities title on left -->
            <StackLayout Grid.Column="0" VerticalOptions="Center">
                <Label Text="Activities"
                       TextColor="#7768E9"
                       FontSize="28"
                       FontAttributes="Bold"/>
                
            </StackLayout>

            <!-- Date Selector on right -->
            <Frame Grid.Column="1" 
                   BackgroundColor="White" 
                   CornerRadius="12" 
                   Padding="10,5"
                   HasShadow="False"
                   BorderColor="#E0E0E0">
                <DatePicker x:Name="ActivityDatePicker" 
                            Format="MMMM dd, yyyy"
                            TextColor="#7768E9"
                            FontAttributes="Bold"
                            DateSelected="OnDateSelected"
                            />
            </Frame>
        </Grid>

        <!-- Task Cards Section -->
        <ScrollView Grid.Row="1">
            <StackLayout x:Name="TaskCardsStack" Spacing="15">

                <!-- Sample Task Card -->
                <Frame CornerRadius="15" 
                       Padding="15" 
                       BackgroundColor="White" 
                       HasShadow="False"
                       BorderColor="#E0E0E0">
                    <StackLayout Spacing="12">
                        <!-- Task Header with checkbox -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <CheckBox Grid.Column="0"
                                      Color="#7768E9"
                                      VerticalOptions="Center"

                                      />

                            <Label Grid.Column="1"
                                   Text="Buy a pack of coffee"
                                   FontSize="18"
                                   TextColor="#333333"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                        </Grid>

                        <!-- Task Description -->
                        <Label Text="Need to get a fresh pack of coffee beans from the local store for tomorrow's meeting"
                               FontSize="15"
                               TextColor="#666666"
                               LineBreakMode="WordWrap"/>

                        <!-- Task Date & Time -->
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackLayout Grid.Column="0">
                                <Label Text="Start Date"
                                       FontSize="13"
                                       TextColor="#7768E9"/>
                                <Label Text="April 04, 2025"
                                       FontSize="14"
                                       TextColor="#444444"/>
                            </StackLayout>

                            <StackLayout Grid.Column="1">
                                <Label Text="End Date"
                                       FontSize="13"
                                       TextColor="#7768E9"/>
                                <Label Text="April 04, 2025"
                                       FontSize="14"
                                       TextColor="#444444"/>
                            </StackLayout>
                        </Grid>

                        <!-- Task Time -->
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackLayout Grid.Column="0">
                                <Label Text="Start Time"
                                       FontSize="13"
                                       TextColor="#7768E9"/>
                                <Label Text="10:30 AM"
                                       FontSize="14"
                                       TextColor="#444444"/>
                            </StackLayout>

                            <StackLayout Grid.Column="1">
                                <Label Text="End Time"
                                       FontSize="13"
                                       TextColor="#7768E9"/>
                                <Label Text="11:00 AM"
                                       FontSize="14"
                                       TextColor="#444444"/>
                            </StackLayout>
                        </Grid>

                        <!-- Action Buttons -->
                        <Grid Margin="0,10,0,0" ColumnSpacing="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                    Text="Edit"
                                    Style="{StaticResource ActionButtonStyle}"
                                    BackgroundColor="#7768E9"
                                    />

                            <Button Grid.Column="1"
                                    Text="Delete"
                                    Style="{StaticResource ActionButtonStyle}"
                                    BackgroundColor="#FF6B6B"
                                    />
                        </Grid>
                    </StackLayout>
                </Frame>

               
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
