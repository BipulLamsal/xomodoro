<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:pomodoro_forms"
             x:Class="pomodoro_forms.AddPage"
             BackgroundColor="#F6F8FF">

    <StackLayout Padding="20">

        <!-- Add Task Header -->
        <Label Text="Add Task"
               FontSize="24"
               TextColor="#7768E9"
               FontAttributes="Bold"
               HorizontalOptions="Start"
               VerticalOptions="Start"
               Margin="0,20,0,20" />

        <!-- Task Name -->
        <Label Text="Task Name"
               FontSize="18"
               TextColor="#7768E9"
               HorizontalOptions="Start"
               VerticalOptions="Start" />
        <Entry x:Name="TaskNameEntry"
               FontSize="18"
               TextColor="#333"
               BackgroundColor="#207768E9"
               Margin="0,0,0,20" />

        <!-- Description -->
        <Label Text="Description"
               FontSize="18"
               TextColor="#7768E9"
               HorizontalOptions="Start"
               VerticalOptions="Start" />
        <Entry x:Name="DescriptionEntry"
               FontSize="18"
               TextColor="#333" 
               BackgroundColor="#207768E9"
               Margin="0,0,0,20" />

        <!-- Task Date -->
        <Label Text="Task Date"
               FontSize="18"
               TextColor="#7768E9"
               HorizontalOptions="Start"
               VerticalOptions="Start" />
        <DatePicker x:Name="TaskDatePicker"
                    Date="{Binding TaskDate}"
                    FontSize="18"
                    HorizontalOptions="FillAndExpand" 
                    BackgroundColor="#207768E9"
                    TextColor="#333"
                    Margin="0,0,0,20" />

        <!-- Time Input -->
        <Label Text="Task Time (hh:mm)"
               FontSize="18"
               TextColor="#7768E9"
               HorizontalOptions="Start"
               VerticalOptions="Start" />
        <Entry x:Name="TaskTimeEntry"
               FontSize="18"
               TextColor="#333"
               BackgroundColor="#207768E9"
               Margin="0,0,0,20"
               Keyboard="Numeric" />

        <!-- Done Switch -->
        <Label Text="Done"
               FontSize="18"
               TextColor="#7768E9"
               HorizontalOptions="Start"
               VerticalOptions="Center" />
        <Switch x:Name="IsDoneSwitch"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                IsToggled="false"
                Margin="0,0,0,20" />

        <!-- Add Task Button -->
        <Button Text="Add Task"
                BackgroundColor="#7768E9"
                TextColor="White"
                FontSize="18"
                Clicked="AddTaskButton_Clicked"
                VerticalOptions="Center"
                HorizontalOptions="FillAndExpand"
                Margin="0,20,0,0" />

    </StackLayout>
</ContentPage>
